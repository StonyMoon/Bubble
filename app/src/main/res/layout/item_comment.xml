<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_comment_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"

    >

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/iv_comment_item_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:qmui_border_width="0dp" />

    <TextView
        android:id="@+id/tv_comment_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="这个是用户名"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_comment_item_avatar"
        app:layout_constraintStart_toEndOf="@+id/iv_comment_item_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_comment_item_avatar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_comment_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="6dp"
        android:text="测试这个是评论这个是评论这个是评论这个是评论这个是评论这个是评论"
        android:textColor="@color/primaryText"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_comment_item_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment_item_username" />

    <TextView
        android:id="@+id/tv_comment_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:text="2017/12/1"

        android:textColor="@color/secondText"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/tool_bar_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment_item_content"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>