<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context="com.stonymoon.bubble.ui.friend.MapActivity">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">
        <Button
            android:id="@+id/btn_map_switch"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:text="切换"
            android:textColor="#fff"

            />


        <Button
            android:id="@+id/btn_map_location"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:text="我的位置"
            android:textColor="#fff"
            />

        <com.stonymoon.bubble.view.FloatingMenu
            android:id="@+id/floating_menu_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />


    </LinearLayout>


    <RelativeLayout

        android:id="@+id/map_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/iv_map_bubble_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:src="@mipmap/bubble" />

        <TextView
            android:id="@+id/tv_map_bubble_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            />


    </RelativeLayout>

    <include layout="@layout/bottom_sheet" />

    <ImageView
        android:id="@+id/iv_map_receive_emoji"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:src="@drawable/shit"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_map_receive_message"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/shit"
        android:visibility="gone" />


</android.support.design.widget.CoordinatorLayout>
